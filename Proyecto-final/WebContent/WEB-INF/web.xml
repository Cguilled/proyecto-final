<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Proyecto-final</display-name>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Resource Servlet</servlet-name>
		<servlet-class>com.icesoft.faces.webapp.CompatResourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Resource Servlet</servlet-name>
		<url-pattern>/xmlhttp/*</url-pattern>
	</servlet-mapping>
	<context-param>
		<description>ACTIVA LAS OPCIONES DE SEGUIMIENTO EXTRAS EN DESARROLLO JSF 2</description>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<context-param>
		<description>ACTIVA/DESACTIVA QUE SE MANDEN/USEN LOS COMENTARIOS EN LAS VISTAS</description>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>org.icefaces.mandatoryResourceConfiguration</param-name>
		<param-value>all</param-value>
	</context-param>
	<context-param>
		<param-name>org.icefaces.coalesceResources</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- NUMERO DE VISTAS QUE PROCESA JSF Y METODO STATE SAVING -->
	<context-param>
		<param-name>com.sun.faces.numberOfLogicalViews</param-name>
		<param-value>15</param-value>
	</context-param>
	<!-- <context-param> <param-name>javax.faces.STATE_SAVING_METHOD</param-name> 
		<param-value>server</param-value> </context-param> -->
	<error-page>
		<exception-type>javax.faces.application.ViewExpiredException</exception-type>
		<location>/xhtml/expired.xhtml</location>
	</error-page>
	<context-param>
		<param-name>com.sun.faces.enableRestoreView11Compatibility</param-name>
		<param-value>true</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:com/atos/spring/modelo.xml</param-value>
	</context-param>

</web-app>